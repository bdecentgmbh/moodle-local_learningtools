{{! Popup Notes list }}

{{#usernotes}}
  <div class="usernotes-mainbody" id="accordion"> 
    {{#records}} 
    	<div class="card">
          {{! Card header }}
          <div class="card-header" id="headingOne">
            <h5 class="mb-0">
              <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-{{range}}" aria-expanded="true" aria-controls="collapse-{{range}}">
                {{title}}
              </button>
            </h5>
          </div>
          {{! End of Card header }}

          <div id="collapse-{{range}}" class="collapse {{#active}}show{{/active}}" aria-labelledby="headingOne" data-parent="#accordion">
          	{{#notes}}
            {{#.}}
            {{! Card body }}
            <div class="card-body">
              <div class="content-block">
                <div class="desc-block">
                 {{{note}}}
                </div>  
                {{! Title block }}
                <div class="title-block">
                  <div class="details-block">
                    <span class="calendar-block">{{time}}</span>{{! Calendar block }}
                  </div>
                </div>
                <div class="action-block"> 
                  
                    <div class="edit-action">{{! Edit link icon }}
                      {{{edit}}}
                    </div>

                    <div class="delete-action"> {{! Delete link icon }}
                      {{{delete}}}
                    </div>
                </div>

              </div>
            </div>
            {{! End of Card body }}
            {{/.}}
            {{/notes}}
          </div>
        </div>
    {{/records}}
  </div>

{{/usernotes}}