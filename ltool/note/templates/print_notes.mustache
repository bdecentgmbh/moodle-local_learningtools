{{!
    @template ltool_note/print_notes

    Example context (json):
    {

    }
}}

<div class="ltool-note-print-page">
    <div class="ltool-note-print-header">
        <h1 class="ltool-note-print-title">{{printtitle}}</h1>
        <div class="ltool-note-print-actions no-print">
            <button id="print-notes-btn" class="ltool-note-print-btn ltool-note-print-btn-primary">
                <i class="fa fa-print" aria-hidden="true"></i>
                {{printbuttontext}}
            </button>
            <button id="return-notes-btn" class="ltool-note-print-btn ltool-note-print-btn-secondary">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                {{returnbuttontext}}
            </button>
        </div>
    </div>

    <div class="ltool-note-print-content">
        {{{notescontent}}}
    </div>
</div>
